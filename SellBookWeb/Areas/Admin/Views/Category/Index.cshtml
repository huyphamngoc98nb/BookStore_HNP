@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-6 pb-3">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="col-5 col-md-5">
                    Category Name
                </th>
                <th class="col-4 col-md-4">
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(row => row.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>

                            @*                             <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</a>
                        *@
                            <form asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id" method="post" onsubmit="return confirmDelete();">
                                <button type="submit" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>Delete</button>
                            </form>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this category?");
    }
</script>