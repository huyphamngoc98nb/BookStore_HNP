@model Product

<form method="post" class="row" enctype="multipart/form-data">
    <div class="border p-3 my-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        @*         <div asp-validation-summary="All"></div>
        *@
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0"></label>
            <input class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Author class="p-0"></label>
            <input class="form-control" asp-for="Author" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Description class="p-0"></label>
            <textarea rows="2" class="form-control" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=ISBN class="p-0"></label>
            <input class="form-control" asp-for="ISBN" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=ListPrice class="p-0"></label>
            <input class="form-control" asp-for="ListPrice" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Price class="p-0"></label>
            <input class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Price50 class="p-0"></label>
            <input class="form-control" asp-for="Price50" />
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Price100 class="p-0"></label>
            <input class="form-control" asp-for="Price100" />
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=CategoryId class="p-0"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select border-0 shadow">
                <option disabled selected>-- Select Category --</option>
            </select>
            @*             <input class="form-control" asp-for="CategoryId" />
            *@            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=ImageUrl class="p-0"></label>
            <input type="file" class="form-control" />
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Return to List</a>
            </div>
        </div>
    </div>
</form>

@* Add client side validation*@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}